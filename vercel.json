{
  "rewrites": [
    { "source": "/go/(.*)", "destination": "/api/redirect" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*.html", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}

