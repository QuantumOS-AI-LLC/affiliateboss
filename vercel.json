{
  "rewrites": [
    { "source": "/go/(.*)", "destination": "/api/redirect" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**/*.html", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ]
}

